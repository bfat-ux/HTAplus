[Unit]
Description=HTA Advisory Backend API Server
After=network.target

[Service]
Type=simple
User=bernardfatoye
WorkingDirectory=/home/bernardfatoye/HTAplus/hta-backend
Environment=NODE_ENV=production
ExecStart=/usr/bin/node /home/bernardfatoye/HTAplus/hta-backend/index.js
